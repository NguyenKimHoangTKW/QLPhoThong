@model QLPhoThong.Models.MONHOC

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>THÊM MÔN HỌC</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        <label class="font-weight-semibold" for="productName">Tên môn học</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenMH, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenMH, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-warning btn-tone m-r-5" />
            <button class="btn btn-warning btn-tone m-r-5">
                @Html.ActionLink("Back to List", "Index")
            </button>
        </div>
    </div>
</div>
}

