@model IEnumerable<QLPhoThong.Models.HOCSINH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int i = 0;
}

<script>
    $(function () {
        $('.datepicker-input').datepicker();
    });
</script>
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            STT
        </th>
        <th>
            Mã Học Sinh
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenHS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgaySinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SDT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GioiTinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrangThai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Thumb)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LOP.TenLop)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DanToc.TenDanToc)
        </th>
        <th>
            #
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        i++;
        <tr>
            <td>
                @i
            </td>
  
            <td>
                @item.TenHS
            </td>
            <td>
                @string.Format("{0:dd-MM-yyyy}", item.NgaySinh)
            </td>
            <td>
                @item.DiaChi
            </td>
            <td>
                @item.SDT
            </td>
            <td>
                @item.GioiTinh
            </td>
            <td>
                @item.TrangThai
            </td>
            <td>
                <img src="~/Areas/Admin/Images/ImagesStudent/@item.Thumb" width="80px" height="50px" />
            </td>

            <td>
                @item.LOP.TenLop
            </td>
            <td>
                @item.DanToc.TenDanToc
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaHS }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaHS }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaHS })
            </td>
        </tr>
    }

</table>
