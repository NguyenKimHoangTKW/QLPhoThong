@model QLPhoThong.Models.HOCSINH

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Details</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông tin học sinh</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>Mã học sinh:</td>
                        <td class="text-dark font-weight-semibold">@Html.DisplayFor(model => model.MaHS)</td>
                    </tr>
                    <tr>
                        <td>Tên học sinh:</td>
                        <td>@Html.DisplayFor(model => model.TenHS)</td>
                    </tr>
                    <tr>
                        <td>Ngày sinh:</td>
                        <td>@Html.DisplayFor(model => model.NgaySinh)</td>
                    </tr>
                    <tr>
                        <td>Địa chỉ:</td>
                        <td>@Html.DisplayFor(model => model.DiaChi)</td>
                    </tr>
                    <tr>
                        <td>Số điện thoại:</td>
                        <td>@Html.DisplayFor(model => model.SDT)</td>
                    </tr>
                    <tr>
                        <td>Mã lớp:</td>
                        <td>@Html.DisplayFor(model => model.LOP.TenLop)</td>
                    </tr>
                    <!--không đụng-->
                    <tr>
                        <td>Status:</td>
                        <td>
                            <span class="badge badge-pill badge-cyan">In Stock</span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.MaHS }) |
    @Html.ActionLink("Back to List", "Index")
</p>
