﻿@model List<QLPhoThong.Models.LOP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int i = 0;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    <a href="/Admin/Lop/Create">Thêm</a>
</p>
<table class="table">
    <tr>
        <th>
            STT
        </th>
        <th>
            Tên Lớp
        </th>
        <th>
            Lớp Chuyên
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        i++;
        <tr>
            <td>
                @i
            </td>
            <td>
                @item.TenLop
            </td>
            <td>
                @item.LopChuyen
            </td>
            <td>
                <a href="/Admin/Lop/Details?id=@item.MaLop">Xem</a> |
                <a href="/Admin/Lop/Edit?id=@item.MaLop">Sửa</a> |
                <a href="/Admin/Lop/Delete?id=@item.MaLop">Xóa</a>
            </td>
        </tr>
    }

</table>