@model QLPhoThong.Models.LOP

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete</h2>

<div>
    <h4>XÓA LỚP</h4>
    <hr />
    <dl class="dl-horizontal">
        <div class="card" style=" margin-top: 75px;">
            <div class="card-body">
                <h4 class="card-title">XÓA LỚP</h4>
                <h2 style="color:red">@ViewBag.ThongBao</h2>
                <div class="table-responsive">
                    <table class="product-info-table m-t-20">
                        <tbody>
                            <tr>
                                <td>Tên lớp:</td>
                                <td>
                                    @Html.DisplayFor(model => model.TenLop)
                                </td>
                            </tr>
                            <tr>
                                <td>Lớp chuyên:</td>
                                <td>
                                    @Html.DisplayFor(model => model.LopChuyen)
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-info btn-tone m-r-5" /> 
            <button class="btn btn-info btn-tone m-r-5">
                @Html.ActionLink("Back to List", "Index")
            </button>
        </div>
    }
</div>
