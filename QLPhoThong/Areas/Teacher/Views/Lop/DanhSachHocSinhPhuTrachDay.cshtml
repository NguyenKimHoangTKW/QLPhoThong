@model IEnumerable<QLPhoThong.Models.HOCSINH>
@{
    ViewBag.Title = "Danh sách học sinh phụ trách dạy";
    Layout = "~/Areas/Teacher/Views/Shared/_TeacherLayout.cshtml";
    int i = 0;
}
@{ var user = Session["User"] as QLPhoThong.Models.User;}
<h2>Danh sách học sinh</h2>

<table class="table" style="margin-top:75px">
    <thead>
        <tr>
            <th>STT</th>
            <th>Tên Học sinh</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            i++;

            <tr>
                <td>#@i</td>
                <td>@item.TenHS</td>
                <td><a href="@Url.Action("XemDiemHocSinhPhuTrachDay","QuanLyDiem", new {id = item.MaHS})">Xem điểm</a></td>
            </tr>

        }
    </tbody>
</table>
<p>
    <a href="@Url.Action("Index","Lop", new {id = user.MaGV})">Quay lại danh sách học sinh</a>
</p>