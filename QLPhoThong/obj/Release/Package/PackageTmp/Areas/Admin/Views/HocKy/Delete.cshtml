@model QLPhoThong.Models.HOCKY

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete</h2>
<hr />
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông tin học kỳ</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>Mã học kỳ:</td>
                        <td class="text-dark font-weight-semibold">@Html.DisplayFor(model => model.MaHky)</td>
                    </tr>
                    <tr>
                        <td>Tên học kỳ:</td>
                        <td>@Html.DisplayFor(model => model.TenHky)</td>
                    </tr>
                    <!--không đụng-->
                    <tr>
                        <td>Status:</td>
                        <td>
                            <span class="badge badge-pill badge-cyan">In Stock</span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class = "btn btn-danger btn-tone m-r-5" />
            <button class="btn btn-danger btn-tone m-r-5">
                @Html.ActionLink("Back to List", "Index")
            </button>
        </div>
    }